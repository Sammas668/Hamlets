using UnityEngine;

public class Hexagon : MonoBehaviour
{
    public Building building;  // Assume Building is another class that manages the building info

    private void OnMouseDown()
    {
        if (building != null)
        {
            // Open the villager menu when the hex with a building is clicked
            Villager villager = building.GetVillager();  // Assuming the building has a method to return a villager
            if (villager != null)
            {
                UIManager.Instance.ShowVillagerMenu(villager);
            }
        }
    }
}