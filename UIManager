using UnityEngine;

public class UIManager : MonoBehaviour
{
    public static UIManager Instance;

    public VillagerMenuUI villagerMenuUI;

    private void Awake()
    {
        if (Instance == null)
        {
            Instance = this;
            DontDestroyOnLoad(gameObject);
        }
        else
        {
            Destroy(gameObject);
        }
    }

    public void ShowVillagerMenu(Villager villager)
    {
        villagerMenuUI.Show(villager);
    }

    public void HideVillagerMenu()
    {
        villagerMenuUI.Hide();
    }
}